@model Macservice3.Models.Thongtinnhansu
@using Macservice3.Models;
@{
    ViewBag.Title = "Chi tiết thông tin nhân sự";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";


    Macservice db = new Macservice();
    var Chucvu_Ad = db.Chucvus.ToList();
    var Phongban_Ad = db.Phongbans.ToList();
    var Trinhdo_chuyenmon_Ad = db.Trinhdo_chuyenmon.ToList();
}

<ol class="breadcrumb">
    <li><a href="/Admin/Thongtinnhansu_Ad">Quản lý thông tin nhân sự</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<h2 class="mB-30">Chi tiết thông tin nhân sự</h2>
<div class="e-form">
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Thông tin chung</h4>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-3">

                        <div class="form-group">
                            <label>Mã nhân viên </label>
                            <input type="text" readonly="readonly" value='@(Model.Manv)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Manv, "", new { @class = "text-danger" })

                        </div>

                    </div>
                    <div class="col-sm-3">

                        <div class="form-group">
                            <label>Họ và tên </label>
                            <input type="text" readonly="readonly" value='@(Model.Hoten)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Hoten, "", new { @class = "text-danger" })

                        </div>

                    </div>
                    <div class="col-sm-3">

                        <div class="form-group">
                            <label>Phòng ban</label>
                            <input type="text" readonly="readonly" value='@(Model.Phongban.Tenphongban)' class="form-control" />

                        </div>

                    </div>
                    <div class="col-sm-3">

                        <div class="form-group">
                            <label>Chức vụ</label>
                            <input type="text" readonly="readonly" value='@(Model.Chucvu.Tenchucvu)' class="form-control" />

                        </div>

                    </div>
                    <div class="col-sm-3">

                        <div class="form-group">
                            <label>Trình độ chuyên môn</label>
                            <input type="text" readonly="readonly" value='@(Model.Trinhdo_chuyenmon.Tentrinhdochuyenmon)' class="form-control" />

                        </div>
                    </div>
                </div>
                <div style="width:100%;height:1px;background-color:#ddd;margin-bottom:10px;"></div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Ngày sinh <span style="color:red">*</span></label>
                            @*<input type="text" readonly="readonly" value='@(Model.Ngaysinh) ' class="form-control" /> *@
                            @Html.EditorFor(model => model.Ngaysinh, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "@required", ReadOnly = "Readonly", @Value = (Model.Ngaysinh != null ? (DateTime.Parse(Model.Ngaysinh.ToString())).ToString("yyyy-MM-dd") : "") } })
                            @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Số điện thoại <span style="color:red">*</span></label>
                            <input type="text" readonly="readonly" value='@(Model.SDT)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Giới tính <span style="color:red">*</span></label>
                            @*  <select class="form-control" onchange="$('#Gioitinh').val($(this).val())">
                                    <option></option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select> *@
                            <input type="text" readonly="readonly" value='@(Model.Gioitinh)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Gioitinh, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Dân tộc <span style="color:red">*</span></label>
                            <input type="text" readonly="readonly" value='@(Model.Dantoc)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Dantoc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Email <span style="color:red">*</span></label>
                            <input type="text" readonly="readonly" value='@(Model.Email)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Nơi sinh <span style="color:red">*</span></label>
                            <input type="text-area" readonly="readonly" value='@(Model.Noisinh)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Noisinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Hộ khẩu thường trú</label>
                            <input type="text" readonly="readonly" value='@(Model.Hokhauthuongtru)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Hokhauthuongtru, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Nơi ở hiện tại</label>
                            <input type="text" readonly="readonly" value='@(Model.Noiohientai)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Noiohientai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div style="width:100%;height:1px;background-color:#ddd;margin-bottom:10px;"></div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Số CMND <span style="color:red">*</span></label>
                            <input type="text" readonly="readonly" value='@(Model.CMND)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Ngày cấp</label>
                            @Html.EditorFor(model => model.Ngaycap, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "@required", ReadOnly = "Readonly", @Value = (Model.Ngaycap != null ? (DateTime.Parse(Model.Ngaycap.ToString())).ToString("yyyy-MM-dd") : "") } })
                            @Html.ValidationMessageFor(model => model.Ngaycap, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Nơi cấp</label>
                            <input type="text" readonly="readonly" value='@(Model.Noicap)' class="form-control" />
                            @Html.ValidationMessageFor(model => model.Noicap, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <hr />
        <div class="form-group">
            <a  href="/Admin/Thongtinnhansu_Ad/Edit/@Model.Manv" class="btn btn-sm btn-success">Cập nhật </a>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
        </div>

    }
</div>
