@model Macservice3.Models.Chitietkyluat

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/Admin/Chitietkyluat_Ad">Quản lý danh sách khen thưởng</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<h2>Thêm mới</h2>

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Mã chi tiết kỷ luật <span style="color:red"></span></label>
            @Html.EditorFor(model => model.Machitietkyluat, new { htmlAttributes = new { @class = "form-control", @type = "textbox" } })
            @Html.ValidationMessageFor(model => model.Machitietkyluat, "", new { @class = "text-danger" })
        </div>
            <div class="form-group">
                <label>Mã nhân viên <span style="color:red">*</span></label>
                @Html.DropDownList("Manv", null, "-Chọn nhân viên-", htmlAttributes: new { @class = "form-control", @required = "@required" })
                @Html.ValidationMessageFor(model => model.Manv, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Tên kỷ luật <span style="color:red">*</span></label>
                @Html.DropDownList("Makyluat", null, "-Chọn loại kỷ luật-", htmlAttributes: new { @class = "form-control", @required = "@required" })
                @Html.ValidationMessageFor(model => model.Makyluat, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Lý do kỷ luật <span style="color:red"></span></label>
                @Html.EditorFor(model => model.Lydokyluat, new { htmlAttributes = new { @class = "form-control", @type = "textbox" } })
                @Html.ValidationMessageFor(model => model.Lydokyluat, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Tiền phạt <span style="color:red"></span></label>
                @Html.EditorFor(model => model.Tienphat, new { htmlAttributes = new { @class = "form-control", @type = "textbox" } })
                @Html.ValidationMessageFor(model => model.Tienphat, "", new { @class = "text-danger" })
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })

            </div>
        }
    </div>
</div>
