@model Macservice3.Models.Phongban

@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="/Admin/Phongban_Ad">Quản lý phòng ban</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<h2>Cập nhật phòng ban</h2>
<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.Maphongban)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Mã phòng ban <span style="color:red">*</span></label>
                <input type="text" readonly="readonly" value='@(Model.Maphongban)' class="form-control" />
                @Html.ValidationMessageFor(model => model.Tenphongban, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Tên phòng ban <span style="color:red">*</span></label>
                @Html.EditorFor(model => model.Tenphongban, new { htmlAttributes = new { @class = "form-control", @required = "@required" } })
                @Html.ValidationMessageFor(model => model.Tenphongban, "", new { @class = "text-danger" })
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>

