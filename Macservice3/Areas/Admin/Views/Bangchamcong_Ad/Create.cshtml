@model Macservice3.Models.Bangchamcong

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/Admin/Bangchamcong_Ad">Quản lý danh sách bảng chấm công</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<h2>Thêm mới </h2>


<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label>Mã bảng công <span style="color:red">*</span></label>
                @Html.EditorFor(model => model.Mabangcong, new { htmlAttributes = new { @class = "form-control", @type = "textbox" } })
                @Html.ValidationMessageFor(model => model.Mabangcong, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Phòng ban <span style="color:red">*</span></label>
                @Html.DropDownList("Maphongban", null, "-Chọn phòng ban-", htmlAttributes: new { @class = "form-control", @required = "@required" })
                @Html.ValidationMessageFor(model => model.Maphongban, "", new { @class = "text-danger" })
            </div>

           
            <div class="form-group">
                <label>Năm<span style="color:red"></span></label>
                @Html.EditorFor(model => model.Nam, new { htmlAttributes = new { @class = "form-control", @type = "textbox" } })
                @Html.ValidationMessageFor(model => model.Nam, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Tháng <span style="color:red"></span></label>
                @Html.EditorFor(model => model.Thangchamcong, new { htmlAttributes = new { @class = "form-control", @type = "textbox" } })
                @Html.ValidationMessageFor(model => model.Thangchamcong, "", new { @class = "text-danger" })
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })

            </div>
        }
    </div>
</div>







