@model Macservice3.Models.Khenthuong

@{
    ViewBag.Title = "Cập nhật ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/Admin/Khenthuong_Ad">Quản lý khen thưởng</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<h2>Cập nhật Khen thưởng</h2>

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.Makhenthuong)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Mã khen thưởng <span style="color:red">*</span></label>
                <input type="text" readonly="readonly" value='@(Model.Makhenthuong)' class="form-control" />
                @Html.ValidationMessageFor(model => model.Tenkhenthuong, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Tên khen thưởng <span style="color:red">*</span></label>
                @Html.EditorFor(model => model.Tenkhenthuong, new { htmlAttributes = new { @class = "form-control", @required = "@required" } })
                @Html.ValidationMessageFor(model => model.Tenkhenthuong, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label> Quyết định <span style="color:red">*</span></label>
                @Html.EditorFor(model => model.Quyetdinh, new { htmlAttributes = new { @class = "form-control", @required = "@required" } })
                @Html.ValidationMessageFor(model => model.Quyetdinh, "", new { @class = "text-danger" })
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
