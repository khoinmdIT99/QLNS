        <tr>
            <td>    @Html.DisplayFor(model => model.Machitietkhenthuong)</td>
            <td>    @Html.DisplayFor(model => model.Thongtinnhansu.Manv)</td>
            <td>    @Html.DisplayFor(model => model.Thongtinnhansu.Hoten)</td>
            <td>    @Html.DisplayFor(model => model.Khenthuong.Tenkhenthuong)</td>
            <td>    @Html.DisplayFor(model => model.Tienthuong)</td>
        </tr>
    </table>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" />&nbsp;
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>



